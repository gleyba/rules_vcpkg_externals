load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(
        include = ["**"],
        exclude = ["*.bazel"],
    ),
)

configure_make(
    name = "autoconf_archive",
    configure_in_place = True,
    lib_source = ":all_srcs",
    out_data_dirs = [
        "share",
    ],
    out_headers_only = True,
)
