load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(
        include = ["**"],
        exclude = ["*.bazel"],
    ),
)

_SCRIPTS = [
    "autoconf",
    "autoheader",
    "autom4te",
    "autoreconf",
    "autoscan",
    "autoupdate",
    "ifnames",
]

configure_make(
    name = "autoconf",
    configure_in_place = True,
    env = select({
        "@platforms//os:macos": {
            "AR": "",
        },
        "//conditions:default": {},
    }),
    lib_source = ":all_srcs",
    out_binaries = _SCRIPTS,
    out_data_dirs = [
        "share",
    ],
)
