load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(
        include = ["**"],
        exclude = ["*.bazel"],
    ),
)

configure_make(
    name = "automake",
    build_data = [
        "@//:postprocess_autoconf",
    ],
    configure_in_place = True,
    env = {
        "AUTOCONF": "$$EXT_BUILD_ROOT/$(location @//:postprocess_autoconf)/bin/autoconf",
        "M4": "$$EXT_BUILD_ROOT/$(M4)",
    },
    lib_source = ":all_srcs",
    out_binaries = [
        "automake",
        "automake-1.16",
        "aclocal",
        "aclocal-1.16",
    ],
    out_data_dirs = [
        "share",
    ],
    toolchains = ["@rules_m4//m4:current_m4_toolchain"],
)
