load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(
        include = ["**"],
        exclude = ["*.bazel"],
    ),
)

configure_make(
    name = "gettext_runtime",
    build_data = [
        "@//scripts:ar_wrapper",
    ],
    configure_in_place = True,
    env = select({
        "@platforms//os:macos": {
            "AR": "$$EXT_BUILD_ROOT/$(location @//scripts:ar_wrapper)",
        },
        "//conditions:default": {},
    }),
    lib_source = ":all_srcs",
    out_data_dirs = [
        "share",
    ],
    out_static_libs = select({
        "@platforms//os:macos": [
            "libasprintf.a",
            "libgettextpo.a",
            "libintl.a",
            "libtextstyle.a",
        ],
        "//conditions:default": [],
    }),
)
