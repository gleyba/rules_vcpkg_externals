load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(
        include = ["**"],
        exclude = ["*.bazel"],
    ),
)

configure_make(
    name = "flex",
    build_data = [
        "@//scripts:ar_wrapper",
    ],
    configure_in_place = True,
    configure_options = [
        "--disable-libfl",  
    ],
    env = {
        "M4": "$$EXT_BUILD_ROOT/$(M4)",
        "YACC": "$$EXT_BUILD_ROOT/$(BISON)",
        "AM_LDFLAGS": "-all-static",
        "RUNFILES_DIR": "$$EXT_BUILD_ROOT/external",
    } | select({
        "@platforms//os:macos": {
            "AR": "$$EXT_BUILD_ROOT/$(location @//scripts:ar_wrapper)",
        },
        "//conditions:default": {},
    }),
    lib_source = ":all_srcs",
    out_binaries = [
        "flex",
    ],
    toolchains = [
        "@rules_m4//m4:current_m4_toolchain",
        "@rules_bison//bison:current_bison_toolchain",
    ],
)
